{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "conf": ["./lib/conf.ts"],
      "@shared/*": ["./lib/shared/*"],
      "@stacks/*": ["./lib/stacks/*"],
      "@stages/*": ["./lib/stages/*"],
      "helpers": ["./lib/helpers.ts"],
      "@infra/*": [
        "./lib/infra/*"
      ]
    },
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule":  true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./dns.json",
    "**/*.cjs", "**/*.mjs", "**/*.js",
    "**/*.ts"
  ],
  "exclude": [
    "*.d.ts",
    "node_modules/*",
    "node_modules",
    "cdk.out"
  ]
}
